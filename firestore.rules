rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Waitlist collection rules
    match /waitlist/{entryId} {
      // Anyone can create a new waitlist entry (for customer signups)
      allow create: if request.resource.data.keys().hasAll(['name', 'phone', 'lessonType', 'location', 'preferredTime', 'contactPreference', 'status', 'timestamp'])
                    && request.resource.data.name is string
                    && request.resource.data.phone is string
                    && request.resource.data.status == 'waiting'
                    && request.resource.data.timestamp == request.time;

      // Anyone can read waitlist entries (for admin panel to display)
      // In production, you might want to restrict this to authenticated admins only
      allow read: if true;

      // Only authenticated users can update entries (admin operations)
      allow update: if request.auth != null
                    && request.auth.token.admin == true;

      // Only authenticated users can delete entries (admin operations)
      allow delete: if request.auth != null
                    && request.auth.token.admin == true;
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
